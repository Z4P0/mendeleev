!!! 5
head
	title Mendeleev
	meta(name="description", content="Mendeleev - Interactive atom viewer")
	meta(charset="utf-8")
	meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
	meta(name="viewport", content="width=device-width, initial-scale=1")
	script(src="js/libs/modernizr.js")
	link(rel="stylesheet", href="style/style.css")


body#mendeleev
	a(href="#main", class="assistive-text") Skip to main content
	div.container
		header#header
			h1 Mendeleev
			form#search
				input(type="text", placeholder="Search element...")

		div#main
			div#loader
			div#app
				div#atom-wrapper
					section#atom
						p#number
						h2.t5#symbol
						h3.t6#name
						p#weight
						ul#electron-config
					canvas#model
						p Hey, you should get a newer browser. Download Firefox or Chrome to see a cool 3D model here
				div#table-wrapper
					canvas#table
						p Hey, you should get a newer browser. Download Firefox or Chrome to see a cool 3D model here
				section#controls
					h2 View
					div
						ul
							li
								label 
									input(type="radio", value="animated")
									span Animated
							li
								label 
									input(type="radio", value="bohr")
									span Bohr Diagram
					div
						p Highlight:
						ul
							li
								label
									input(type="checkbox", value="hi-protons")
									span Protons
							li
								label
									input(type="checkbox", value="hi-neutrons")
									span Neutrons
							li
								label
									input(type="checkbox", value="hi-electrons")
									span Electrons
						p Rotate around the camera with the mouse or swipes on mobile
						p pinch to zoom
						p tap to fade out GUI
						form#got-it
							label
								span Got it
								input(type="checkbox", value="got-it")
			

		footer#footer
			p
				strong Joe Natalzia &amp; Luis Rosario - 2014
			p Made with Three.js, Modernizr, &amp; SASS

	script(src="js/libs/three.min.js")
	script(src="js/main.js")
</html>

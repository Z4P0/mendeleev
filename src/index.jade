!!! 5
head
	title Mendeleev
	meta(name="description", content="Mendeleev - Interactive atom viewer")
	meta(charset="utf-8")
	meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
	meta(name="viewport", content="width=device-width, initial-scale=1")
	script(src="http://code.createjs.com/soundjs-0.5.2.min.js")
	script(src="js/libs/modernizr.js")
	link(rel="stylesheet", href="style/style.css")


body#mendeleev
	div.container
		header#header
			h1 Mendeleev

		div#app
			div#table-wrapper.canvas-wrapper
				canvas#table
					p Hey, you should get a newer browser. Download Firefox or Chrome to see a cool 3D model here

			div#atom-wrapper.canvas-wrapper
				canvas#model
					p Hey, you should get a newer browser. Download Firefox or Chrome to see a cool 3D model here


			div#controls-wrapper
				section#atom
					p#number
					h2.t5#symbol
					h3.t6#name
					p#weight
					ul#electron-config

				form#search
					input(type="text", placeholder="Search element...")

				div#back
					span#back-btn.btn Back


				section#controls
					h2 View
					ul#controls-list
						li
							label
								input#bohr(type="checkbox", name="view", value="bohr")
								span Bohr Diagram
						li
							label
								input#show-orbits(type="checkbox", name="view", value="orbitals")
								span Show orbitals
						li
							label
								input#vibrate-nucleus(type="checkbox", name="view", value="vibrate", checked)
								span Vibrate nucleus

					div
						ul#instructions
							li Use the arrow keys to pan around the table
							li Use 'W' and 'S' to zoom in and out of the table
							li Press 'R' to reset the camera

				form#search
					input(type="text", placeholder="Search element...")
				button#atom-back.hide Back
				button#shuffle-elements Shuffle Elements

			div#key-wrapper
				ul#element-types
					li(data-id="alkali-metal")
						div#alkali-metals.color-box
						div.color-label Alkali Metal
					li(data-id="alkaline-earth-metal")
						div#alkaline-earth-metals.color-box
						div.color-label Alkaline Earth Metal
					li(data-id="transition-metal")
						div#transition-metals.color-box
						div.color-label Transition Metal
					li(data-id="post-transition-metal")
						div#post-transition-metals.color-box
						div.color-label Post-Transition Metal
					li(data-id="metalloid")
						div#metalloids.color-box
						div.color-label Metalloid
					li(data-id="other-non-metal")
						div#other-non-metals.color-box
						div.color-label Other Non-Metal
					li(data-id="halogen")
						div#halogens.color-box
						div.color-label Halogen
					li(data-id="noble-gas")
						div#noble-gases.color-box
						div.color-label Noble Gas


		footer#footer
			p Joe Natalzia &amp; Luis Rosario - 2014

	script(src="js/libs/three.min.js")
	script(src="js/libs/tween.min.js")
	script(src="js/main.js")
</html>
